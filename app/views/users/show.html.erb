<h1 class="title is-3 is-primary">Even't created by you</h1>
<div class="columns">

<div class="column">

<% @my_upcoming.each do |x| %>
<div class="card middle">
  <header class="card-header">
    <p class="card-header-title">
      previous Event!! Hosted by: <strong>YOU</strong>
    </p>
    <a href="#" class="card-header-icon" aria-label="more options">
      <span class="icon">
